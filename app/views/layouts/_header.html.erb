<header>
	<%= image_tag("logo.png", :alt => "FriendlyCrowds", :class => "round") %>
	<nav class="round">
		<ul>
			<li><%= link_to "Home", root_path %></li>
			<li><%= link_to "Help", '#' %></li>
			<li><% if current_user %>
					Welcome <%= current_user.name %>!
					<%= link_to "Sign Out", signout_path %>
				<% else %>
					<%= link_to "Sign in with Twitter", "/auth/twitter" %>
				<% end %></li>
		</ul>
	</nav>
</header>